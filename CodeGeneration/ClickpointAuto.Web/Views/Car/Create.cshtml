@using ClickPointAuto.Core.Models
@model CarModel
           

@{
    ViewBag.Title = "Car Configuration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<h2>Create a new Car Configuration</h2>
@using (Html.BeginForm("Create", "Car", FormMethod.Post)){
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Configure your Car</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.VehicleModel)
        </div>
        <div class="editor-field">
            @Html.DropDownList("VehicleModel", (IEnumerable<SelectListItem>)ViewBag.Models)

        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Color)
        </div>
        <div class="editor-field">
            @Html.DropDownList("Color", (IEnumerable<SelectListItem>)ViewBag.Colors)
        </div>

        <div class="editor-label">
            <label for="SportsPackage">Sports Package</label>
        </div>
        <div class="editor-field">
             Yes:
            @Html.RadioButtonFor(m => m.SportsPackage, true)
            No:
            @Html.RadioButtonFor(m => m.SportsPackage, false)
            @Html.ValidationMessageFor(model => model.SportsPackage)
        </div>

        <div class="editor-label">
            <label for="OptionsMacroText">Options Macro</label>
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.OptionsMacroText)
            @Html.ValidationMessageFor(model => model.OptionsMacroText)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
